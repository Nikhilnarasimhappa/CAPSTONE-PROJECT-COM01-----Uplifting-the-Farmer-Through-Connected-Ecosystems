<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/backgroundfarmer">

    <!-- Header with Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:elevation="4dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:clickable="true"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="@drawable/backbtn" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="ADD MACHINERIES"
            android:textColor="#0D0C0C"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Input Fields -->
    <EditText
        android:id="@+id/etMachineryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Machinery Name"
        android:padding="10dp"
        android:textColor="#050505" />

    <EditText
        android:id="@+id/etMachineryQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Machinery Quantity"
        android:padding="10dp"
        android:textColor="#0B0B0B" />

    <EditText
        android:id="@+id/etMachineryPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Machinery Price"
        android:padding="10dp"
        android:textColor="#050505" />

    <!-- Image Selection -->
    <ImageView
        android:id="@+id/machineryImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#25A629"
        android:text="Select Image"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#25A629"
        android:text="Add Machinery"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
