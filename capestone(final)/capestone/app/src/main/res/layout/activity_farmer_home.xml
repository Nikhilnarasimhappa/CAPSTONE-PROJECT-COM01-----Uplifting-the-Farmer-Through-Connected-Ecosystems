<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/abc"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:paddingTop="40dp">


        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Farmer's Portal"
            android:textSize="34sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <!-- Icon ImageView -->
    <ImageView
        android:id="@+id/portalIcon"
        android:layout_width="159dp"
        android:layout_height="174dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:contentDescription="Portal Icon"
        android:src="@drawable/farmer" />

        <!-- Add and Sell Crop Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

                <!-- Add and Sell Crop Button -->
            <Button
                android:id="@+id/btnAddSellCrop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#AFB42B"
                android:padding="14dp"
                android:text="Add and Sell Crop"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

                <!-- Rent Land Button -->
            <Button
                android:id="@+id/btnRentLand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#388E3C"
                android:padding="14dp"
                android:text="Rent Land"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center"
         android:layout_marginTop="20dp"
         android:layout_marginBottom="30dp"> <!-- Buy Machinery Button -->
         <Button
             android:id="@+id/btnBuyMachinery"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginEnd="8dp"
             android:layout_weight="1"
             android:backgroundTint="#388E3C"
             android:padding="14dp"
             android:text="Buy Machineries"
             android:textColor="#FFFFFF"
             android:textSize="16sp"
             android:textStyle="bold" />

        <!-- Buy Fertilizer Button -->
         <Button
             android:id="@+id/btnBuyFertilizer"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_weight="1"
             android:backgroundTint="#AFB42B"
             android:padding="14dp"
             android:text="Buy Fertilizers"
             android:textColor="#FFFFFF"
             android:textSize="16sp"
             android:textStyle="bold" />
     </LinearLayout>
        <!-- History Button -->
        <Button
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#673AB7"
            android:text="History"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="14dp"
            android:layout_gravity="center"/>

        <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF1300"
        android:padding="14dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
