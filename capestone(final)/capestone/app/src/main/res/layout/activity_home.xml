<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bck1" />

    <!-- Semi-Transparent Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" /> <!-- 50% opacity black overlay -->

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Project Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center"
            android:text="WELCOME TO HARVESTPRO"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Decorative Line -->
        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF" />

        <!-- Buttons -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FF8C00"
            android:elevation="4dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#3CB371"
            android:elevation="4dp"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textStyle="bold" />

        <!-- Logo or Decorative Image -->
        <!-- Replace 'logo' with your project logo or image -->

    </LinearLayout>

</FrameLayout>
